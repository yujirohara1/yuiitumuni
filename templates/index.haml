                %div.row
                  %div.col-md-12
                    %div.input-group
                      %span.input-group-addon.custom_msize
                        満足度を５段階評価
                      %span.input-group-addon.custom_msize style="background-color:white; border-left:1px solid #ccc; width:310px; height:42px"
                        %span.label.label-success
                          良い
                        %span
                          &nbsp;&nbsp;&nbsp;&nbsp;
                        %input#rdRankA(type="radio" name="rdRank1")
                        %label(style="font-size:14px;font-weight:normal;" for="rdRankA")
                          &nbsp;５&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        %input#rdRankB(type="radio" name="rdRank1")
                        %label(style="font-size:14px;font-weight:normal;" for="rdRankB")
                          &nbsp;４&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        %input#rdRankC(type="radio" name="rdRank1")
                        %label(style="font-size:14px;font-weight:normal;" for="rdRankC")
                          &nbsp;３&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        %input#rdRankD(type="radio" name="rdRank1")
                        %label(style="font-size:14px;font-weight:normal;" for="rdRankD")
                          &nbsp;２&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        %input#rdRankE(type="radio" name="rdRank1")
                        %label(style="font-size:14px;font-weight:normal;" for="rdRankE")
                          &nbsp;１&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        %span.label.label-default
