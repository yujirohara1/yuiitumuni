                      %textarea#txtereaComment1.form-control.custom_msize (type="text" class="form-control" placeholder="・使いやすいシステムだと思う&#13;・保守サポートが悪い")

          %div.modal-footer#modalQuestionFooter
            %div.row
              %div.col-md-2
              %div.col-md-2
              %div.col-md-7
              %div.col-md-1
                %button.btn.btn-default(type="button" data-dismiss="modal")
                  閉じる

    <!-- データ抽出モーダル -->
    %div.modal.fade#modalKatuyo(tabindex="-1")
      %div.modal-dialog.modal-lg
        %div.modal-content
          %div.modal-header
            %button.close(type="button" data-dismiss="modal")
              %span
                ×
            %h4.modal-title#subGtitle
              データをCSV出力します。
          %div.modal-body
            %div.row
              %div.col-md-3
                %table.table-bordered.row.hover#tableKatuyo
